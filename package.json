{
  "name": "@illinois-toolkit/ilw-back-to-top",
  "description": "Illinois Toolkit: The Illinois component back-to-top allows you to provide a simple way to skip either to the top of a page or to a designated point in the page (such as the page content area).",
  "private": false,
  "license": "MIT",
  "version": "1.2.0",
  "type": "module",
  "files": [
    "src/**",
    "dist/**",
    "builder/**"
  ],
  "exports": {
    ".": {
      "import": "./dist/ilw-back-to-top.js",
      "require": "./dist/ilw-back-to-top.cjs",
      "default": "./dist/ilw-back-to-top.js"
    },
    "./ilw-back-to-top.css": {
      "import": "./dist/ilw-back-to-top.css"
    }
  },
  "main": "./dist/ilw-back-to-top.js",
  "module": "./dist/ilw-back-to-top.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
    "preview": "vite preview",
    "prepack": "npm run build",
    "test:axe": "playwright test",
    "test:axe:github": "playwright test --config=playwright.ci.config.ts",
    "test": "vitest run --browser.headless",
    "test:browser": "vitest watch --browser chromium"
  },
  "dependencies": {
    "lit": "3.1.3"
  },
  "devDependencies": {
    "@illinois-toolkit/ilw-core": "^1.0.2",
    "@playwright/test": "^1.55.1",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.55.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest-browser-lit": "^0.1.0"
  }
}
